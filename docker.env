# Docker Environment Configuration for Transcribe Application

# Ollama Configuration
OLLAMA_MODEL=llama3.1:latest
OLLAMA_URL=http://ollama:11434

# Whisper Configuration  
# Note: medium/large models require 4GB+ RAM, use base for limited memory
WHISPER_MODEL=base

# Speaker Configuration
LEFT_SPEAKER_NAME=Customer
RIGHT_SPEAKER_NAME=Agent

# Processing Configuration
SEGMENT_MERGE_THRESHOLD=2.0
FORCE_LANGUAGE=auto

# Python Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1